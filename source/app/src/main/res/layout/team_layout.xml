<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/iv_team_image"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:src="#ce1313" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team Info"
        android:id="@+id/tv_team"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_team_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#1f6503" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Players"
        android:id="@+id/tv_team_players"
        android:layout_marginLeft="200dp"
        android:textColor="#070707" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="FIXTURE"
        android:id="@+id/bt_fixture"
        android:layout_below="@+id/tv_team"
        android:layout_alignLeft="@+id/tv_team"
        android:layout_alignStart="@+id/tv_team"
        android:layout_marginTop="105dp"
        android:onClick="setButton_fixture"/>
</RelativeLayout>
